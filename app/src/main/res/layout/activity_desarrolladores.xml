<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_desarrolladores_scene"
    tools:context=".Desarrolladores">

    <!-- Logo superior -->
    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/icono" />

    <!-- Título -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Datos Desarrolladores"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView13" />

    <!-- CARD 1 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView7"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="#4CAF50"
        app:cardCornerRadius="10dp"
        app:contentPadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageIconoDesarrollador1"
                android:layout_width="106dp"
                android:layout_height="110dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/iconodesarrolladores1" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:text="Desarrollador: Fabián Alfredo Robles Rivera"
                android:textAlignment="viewStart"
                android:textColor="#F6F0F0"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageIconoDesarrollador1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Rol: FrontEnd/BackEnd"
                android:textAlignment="viewStart"
                android:textColor="#F6F0F0"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageIconoDesarrollador1"
                app:layout_constraintTop_toBottomOf="@id/textView6" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Correo: fabian.robles06@inacapmail.cl"
                android:textAlignment="viewStart"
                android:textColor="#F6F0F0"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageIconoDesarrollador1"
                app:layout_constraintTop_toBottomOf="@id/textView11" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Institución/Carrera/Sección: Estudiante Ingeniería Informática P2-C1, INACAP"
                android:textAlignment="viewStart"
                android:textColor="#F6F0F0"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageIconoDesarrollador1"
                app:layout_constraintTop_toBottomOf="@id/textView12" />

            <TextView
                android:id="@+id/textViewGitHub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:autoLink="web"
                android:text="GitHub: https://github.com/Fabithelast25"
                android:textAlignment="viewStart"
                android:textColor="#BBDEFB"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageIconoDesarrollador1"
                app:layout_constraintTop_toBottomOf="@id/textView13" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- CARD 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDesarrollador2"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#1A3D6A"
        app:cardCornerRadius="10dp"
        app:contentPadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView7">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageIconoDesarrollador2"
                android:layout_width="106dp"
                android:layout_height="110dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/iconodesarrolladores2" />

            <TextView
                android:id="@+id/textViewNombre2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:text="Desarrollador: Benjamín Alejandro Silva Márquez"
                android:textAlignment="viewStart"
                android:textColor="#F6F0F0"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageIconoDesarrollador2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewRol2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Rol: FrontEnd/QA"
                android:textAlignment="viewStart"
                android:textColor="#F6F0F0"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageIconoDesarrollador2"
                app:layout_constraintTop_toBottomOf="@id/textViewNombre2" />

            <TextView
                android:id="@+id/textViewCorreo2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Correo: benjamin.silva39@inacapmail.cl"
                android:textAlignment="viewStart"
                android:textColor="#F6F0F0"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageIconoDesarrollador2"
                app:layout_constraintTop_toBottomOf="@id/textViewRol2" />

            <TextView
                android:id="@+id/textViewInstitucion2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Institución/Carrera/Sección: Estudiante Ingeniería Informática P2-C1, INACAP"
                android:textAlignment="viewStart"
                android:textColor="#F6F0F0"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageIconoDesarrollador2"
                app:layout_constraintTop_toBottomOf="@id/textViewCorreo2" />

            <TextView
                android:id="@+id/textViewGitHub2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:autoLink="web"
                android:text="GitHub: https://github.com/Benjamin-Marquez123"
                android:textAlignment="viewStart"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageIconoDesarrollador2"
                app:layout_constraintTop_toBottomOf="@id/textViewInstitucion2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.motion.widget.MotionLayout>

